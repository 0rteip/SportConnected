<BorderPane prefHeight="810.0" prefWidth="1400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15" fx:controller="view.scenecontroller.SegmentTableController">
                  <center>
                  <TableView fx:id="segmentTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <columns>
                        <TableColumn prefWidth="75.0" text="C1" />
                        <TableColumn prefWidth="75.0" text="C2" />
                     </columns>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </TableView>
               </center>
               <left>
                  <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                     <tabs>
                        <Tab fx:id="addSegmentPage" text="Aggiungi">
                           <content>
                              <VBox spacing="18.0">
                                 <children>
                                    <TextField fx:id="nameSegmentField" promptText="Nome" />
                                    <ChoiceBox fx:id="choiceIdSport" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                                    <ChoiceBox fx:id="choiceIdSegment" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                                    <CheckBox fx:id="privateSegmentCheck" mnemonicParsing="false" text="Privato" />
                                    <GridPane alignment="CENTER" hgap="20.0">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                       </rowConstraints>
                                       <children>
                                          <Button fx:id="loadSegmentButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#loadSegment" text="Carica traccia" />
                                          <Label fx:id="segmentLabel" text="..." GridPane.columnIndex="1" />
                                       </children>
                                    </GridPane>
                                    <Button fx:id="addSegmentButton" mnemonicParsing="false" onAction="#addSegment" text="Inserisci nuovo percorso" />
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </Tab>
                        <Tab fx:id="operationSegmentPage" text="Operazioni">
                           <content>
                              <VBox spacing="18.0">
                                 <children>
                                    <Label text="Visualizza migliori tempi sui segmenti di:" />
                                    <TextField fx:id="userIdSegmentField" promptText="Id utente" />
                                    <Button fx:id="visualizeTopSegmentButton" mnemonicParsing="false" onAction="#visualizeTopSegment" text="Visualizza tempi" />
                                    <Label layoutX="30.0" layoutY="30.0" text="Visualizza il migliore utente&#10;che ha percorso il segmento:" />
                                    <TextField fx:id="userIdTopField" layoutX="30.0" layoutY="66.0" promptText="Id utente" />
                                    <Button fx:id="visualizeTopOnSegmentButton" layoutX="30.0" layoutY="110.0" mnemonicParsing="false" onAction="#visualizeTopOnSegment" text="Visualizza utente" />
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </Tab>
                     </tabs>
                  </TabPane>
               </left>
            </BorderPane>